  }

  .logo {
    color: #fe424d;
    font-size: 2rem;
    font-weight: bold;
    text-decoration: none;
  }

  .logo-i {
    margin-right: 2rem;
}


.navbar-toggler {
    background-color: #fe424d;
    border: none;
    padding: 5px 10px;
    border-radius: 5px;
}

.container-fluid {
  background-color: white;
  border-radius: 10px;
}



.search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem, 0, 1rem;
  }
  .search-btn:hover {
    background: #c73139;
    color: #fff;
  }
  

.logout {
  background-color: #fe424d;
  color: white !important;
  border-radius: 10px;
}

.logout:hover {
    background: #c73139;

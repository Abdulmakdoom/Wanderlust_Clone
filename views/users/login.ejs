<% layout('/layouts/boilerplate') %>

<body>
    <style>
        * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Arial', sans-serif;
}

body {
    background: linear-gradient(to bottom, #fe424d, pink);
    display: flex;
    justify-content: center;
    color: #fff;
}

    </style>
    <div class="login-container">
        <h1 class="title">WanderLust Login</h1>
        <p class="subtitle">Welcome back to WanderLust</p>
        <form action="/login" method="POST" class="login-form" class="needs-validation" novalidate>
            <div class="form-group">
                <label for="username">Username</label>
                <input name="username" type="text" id="username" placeholder="Enter your username" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input name="password" type="password" id="password" placeholder="Enter your password" required>
            </div>
            <button type="submit" class="login-btn btn-success">Log In</button>
        </form>
    </div>
</body>




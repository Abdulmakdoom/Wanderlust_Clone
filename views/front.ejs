<% layout('/layouts/boilerplate') %>
<body>
  <style>
      /* General Reset */
      * {
          margin: 0;
          padding: 0;
          box-sizing: border-box;
      }

      body {
          font-family: 'Arial', sans-serif;
          display: flex;
          flex-direction: column;
          min-height: 100vh;
          background: #000;
      }
  </style>

<div class="hero">
  <div class="hero-content">
      <h1 class="animate-text">Discover Luxury at <span>Wanderlust Hotels</span></h1>
      <p class="animate-fade">Find the best deals for your dream vacation. Book your stay now!</p>
  </div>

  <!-- Booking Form -->
  <div class="booking-form animate-slide">
      <h3>Just Book Great Views</h3>
      <div class="form-group">
          <img src="https://images.unsplash.com/photo-1561501900-3701fa6a0864?fm=jpg&q=60&w=3000&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8bHV4dXJ5JTIwaG90ZWx8ZW58MHx8MHx8fDA%3D" alt="Luxury Hotel">
      </div>
      <div class="ancher">
          <b><a class="btn1" href="#" id="explore" data-prod-url="https://wanderlust-clone-eqq7.onrender.com/listings">Explore Now</a></b>
      </div>
  </div>
</div>

<!-- JavaScript to update the link based on environment -->
<script>
  // Get the explore link element
  let exploreLink = document.getElementById('explore');

  // Here you can simply define a flag or check the domain pattern to set the URL
  // For example, if the hostname contains "render" we assume it's production
  let isProduction = window.location.hostname.includes('render'); 

  // Set the href based on the environment directly, no localhost check
  if (isProduction) {
      exploreLink.href = exploreLink.dataset.prodUrl;
  } else {
      // Optionally, handle cases where you want to redirect to a different page (e.g., staging or another URL)
      exploreLink.href = 'http://localhost:8080/listings';  // Example URL for staging or fallback
  }

</script>


</body>
